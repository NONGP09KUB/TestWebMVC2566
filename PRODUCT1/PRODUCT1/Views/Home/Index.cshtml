@model IEnumerable<Product>
<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            var Price50 = item.Price + item.Price * .5;
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-5 shadow border-top border-2 rounded">
                    <h3 class="container">Product : @item.Id</h3>
                    <img src="@item.ImageUrl" class="card-img-top rounded img-fluid" alt="Product Image" /> <div class="card-body">
                        <h5 class="card-title text-dark text-uppercase text-center">@item.Name</h5>
                        <div class="pl-1">
                            <p>
                                ราคาเต็ม :
                                <strike><b>$@Price50.ToString("0.00")</b></strike>
                            </p>
                        </div>
                        <div class="pl-1">
                            <p>ลดราคา: <b>$@item.Price.ToString("0.00")</b></p>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Home" asp-action="Detail" asp-route-productId="@item.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>